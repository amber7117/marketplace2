# ========================================
# Virtual Trading Platform
# Environment Configuration Template
# ========================================

# ========================================
# GLOBAL SETTINGS
# ========================================
NODE_ENV=development
FRONTEND_URL=http://localhost:3001

# ========================================
# API GATEWAY (Port: 3000)
# ========================================
GATEWAY_PORT=3000

# Service URLs
AUTH_SERVICE_URL=http://localhost:3001
PRODUCT_SERVICE_URL=http://localhost:3002
ORDER_SERVICE_URL=http://localhost:3003
WALLET_SERVICE_URL=http://localhost:3004
PAYMENT_SERVICE_URL=http://localhost:3005
NOTIFICATION_SERVICE_URL=http://localhost:3006

# ========================================
# AUTH SERVICE (Port: 3001)
# ========================================
AUTH_PORT=3001
AUTH_MONGODB_URI=mongodb://localhost:27017/virtual-trading-auth

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRE=7d
JWT_REFRESH_EXPIRE=30d

# Email Configuration (for verification)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
EMAIL_FROM=noreply@virtualtradingplatform.com

# ========================================
# PRODUCT SERVICE (Port: 3002)
# ========================================
PRODUCT_PORT=3002
PRODUCT_MONGODB_URI=mongodb://localhost:27017/virtual-trading-product

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Image Upload (if implementing)
MAX_IMAGE_SIZE=5242880
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# ========================================
# ORDER SERVICE (Port: 3003)
# ========================================
ORDER_PORT=3003
ORDER_MONGODB_URI=mongodb://localhost:27017/virtual-trading-order

# Order Settings
ORDER_NUMBER_PREFIX=VTP
ORDER_EXPIRY_MINUTES=30
ENABLE_AUTO_DELIVERY=true

# ========================================
# WALLET SERVICE (Port: 3004)
# ========================================
WALLET_PORT=3004
WALLET_MONGODB_URI=mongodb://localhost:27017/virtual-trading-wallet

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Wallet Settings
MIN_BALANCE=0
MAX_BALANCE=1000000
TRANSACTION_FEE_PERCENTAGE=0

# ========================================
# PAYMENT SERVICE (Port: 3005)
# ========================================
PAYMENT_PORT=3005
PAYMENT_MONGODB_URI=mongodb://localhost:27017/virtual-trading-payment

# Stripe Payment Gateway
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

# Razer Gold Payment Gateway
RAZER_API_KEY=your_razer_gold_api_key_here
RAZER_API_SECRET=your_razer_gold_api_secret_here
RAZER_MERCHANT_ID=your_razer_merchant_id_here
RAZER_SANDBOX=true

# FPX (Malaysian Banking)
FPX_EXCHANGE_ID=your_fpx_exchange_id
FPX_SELLER_ID=your_fpx_seller_id
FPX_ENCRYPTION_KEY=your_fpx_encryption_key
FPX_SANDBOX=true

# USDT (Cryptocurrency)
USDT_WALLET_ADDRESS=your_usdt_wallet_address
USDT_API_KEY=your_blockchain_api_key
USDT_NETWORK=trc20

# ========================================
# NOTIFICATION SERVICE (Port: 3006)
# ========================================
NOTIFICATION_PORT=3006
NOTIFICATION_MONGODB_URI=mongodb://localhost:27017/virtual-trading-notification

# Email Notifications
NOTIFICATION_SMTP_HOST=smtp.gmail.com
NOTIFICATION_SMTP_PORT=587
NOTIFICATION_SMTP_USER=notifications@virtualtradingplatform.com
NOTIFICATION_SMTP_PASS=your-smtp-password

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_from_botfather
TELEGRAM_ADMIN_CHAT_ID=your_admin_chat_id

# Webhook Notifications
WEBHOOK_SECRET=your_webhook_signing_secret
WEBHOOK_RETRY_ATTEMPTS=3

# ========================================
# DATABASE SETTINGS
# ========================================

# MongoDB Connection (Docker)
MONGODB_HOST=mongodb
MONGODB_PORT=27017
MONGODB_USER=admin
MONGODB_PASSWORD=password123

# MongoDB Atlas (Production Alternative)
# MONGODB_ATLAS_URI=mongodb+srv://username:password@cluster.mongodb.net/

# ========================================
# SECURITY SETTINGS
# ========================================

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# CORS
CORS_ORIGIN=http://localhost:3001,https://yourdomain.com

# ========================================
# LOGGING & MONITORING
# ========================================

# Log Level
LOG_LEVEL=debug

# Sentry (Error Tracking)
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ENVIRONMENT=development

# ========================================
# MULTI-CURRENCY & REGION
# ========================================

# Default Currency
DEFAULT_CURRENCY=USD

# Supported Currencies
SUPPORTED_CURRENCIES=USD,MYR,THB,VND,PHP,SGD,EUR

# Exchange Rate API
EXCHANGE_RATE_API_KEY=your_exchange_rate_api_key
EXCHANGE_RATE_CACHE_TTL=3600

# ========================================
# MULTI-LANGUAGE (i18n)
# ========================================

# Default Language
DEFAULT_LANGUAGE=en

# Supported Languages
SUPPORTED_LANGUAGES=en,zh-cn,th,my,vi

# ========================================
# FEATURE FLAGS
# ========================================

ENABLE_REGISTRATION=true
ENABLE_GUEST_CHECKOUT=false
ENABLE_WALLET_PAYMENT=true
ENABLE_CRYPTO_PAYMENT=false
ENABLE_REFERRAL_SYSTEM=false
ENABLE_LOYALTY_POINTS=false

# ========================================
# ADMIN SETTINGS
# ========================================

# Admin Panel
ADMIN_EMAIL=admin@virtualtradingplatform.com
ADMIN_PASSWORD=change-this-secure-password

# ========================================
# DEVELOPMENT TOOLS
# ========================================

# API Documentation
ENABLE_API_DOCS=true
API_DOCS_PATH=/api/docs

# Debug Mode
DEBUG=false

# ========================================
# NOTES
# ========================================
# 1. Never commit this file with real credentials
# 2. Use .env.local for local development overrides
# 3. In production, use environment variables from hosting platform
# 4. Generate secure random strings for secrets:
#    node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# 5. For Docker deployment, copy relevant sections to docker-compose.yml
