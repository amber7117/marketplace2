{
  "name": "marketplace-frontend",
  "version": "1.0.0",
  "description": "E-commerce frontend with multi-language and multi-currency support",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "pnpm run sync:images && next build",
    "start": "next start",
    "lint": "next lint",
    "test": "vitest run",
    "test:watch": "vitest",
