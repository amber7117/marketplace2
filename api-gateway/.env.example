# API Gateway Configuration
PORT=3000
NODE_ENV=development

# Frontend Configuration
FRONTEND_URL=https://api.topupforme.com
API_URL=https://api.topupforme.com

# JWT Configuration
JWT_SECRET=topupformemarketplace

# Redis Configuration (for caching and session)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Service Discovery (Consul)
CONSUL_HOST=localhost
CONSUL_PORT=8500

# Service URLs (fallback if service discovery fails)




NODE_ENV = "production"
AUTH_SERVICE_URL = "https://auth.topupforme.com"
PRODUCT_SERVICE_URL = "https://product-service.yourdomain.workers.dev"
ORDER_SERVICE_URL = "https://order-service.yourdomain.workers.dev"
WALLET_SERVICE_URL = "https://wallet-service.yourdomain.workers.dev"
PAYMENT_SERVICE_URL = "https://payment-service.yourdomain.workers.dev"
NOTIFICATION_SERVICE_URL = "https://notification-service.yourdomain.workers.dev"
API_URL = "https://api.topupforme.com"
FRONTEND_URL = "https://topupforme.com"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Logging
LOG_LEVEL=info

# Health Check
HEALTH_CHECK_INTERVAL=30000

# Circuit Breaker
CIRCUIT_BREAKER_TIMEOUT=10000
CIRCUIT_BREAKER_RESET_TIMEOUT=60000